{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true
  },
  "lib": ["esnext"],
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"],
}
